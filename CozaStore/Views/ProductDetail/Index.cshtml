@using CozaStore.Models;
@{
    ViewBag.Title = "Index";

    string tenSanpham = "";
    string loaiSanPham = "";
    int giaBan = 0;
    string moTaSPTomTat = "";
    string moTaSP = "";
    string maSP = "";
    string hinhanh = "";
    if (ViewData["sp"] != null)
    {
        SanPham sanPhamXem = (SanPham)ViewData["sp"];
        tenSanpham = sanPhamXem.tenSP;
        loaiSanPham = sanPhamXem.LoaiSP.tenLoai;
        giaBan = ((int)(sanPhamXem.giaBan));
        moTaSP = sanPhamXem.noiDung;
        moTaSPTomTat = sanPhamXem.ndTomTat;
        maSP = sanPhamXem.maSP;
        hinhanh = sanPhamXem.hinhDD;
    }

}


<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a href="@Url.Action("Index","Home")" class="stext-109 cl8 hov-cl1 trans-04">
            Trang chủ
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <a href="@Url.Action("Index","Product")" class="stext-109 cl8 hov-cl1 trans-04">
            @loaiSanPham
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">
            @tenSanpham
        </span>
    </div>
</div>


<!-- Product Detail -->
<section class="sec-product-detail bg0 p-t-65 p-b-60">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-7 p-b-30">
                <div class="p-l-25 p-r-30 p-lr-0-lg">
                    <div class="wrap-slick3 flex-sb flex-w">
                        <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

                        <div class="slick3 gallery-lb">
                            <div class="item-slick3" data-thumb="">
                                <div class="wrap-pic-w pos-relative">
                                    <img src="@(hinhanh)" alt="IMG-PRODUCT">

                                    <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="images/product-detail-01.jpg">
                                        <i class="fa fa-expand"></i>
                                    </a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-5 p-b-30">
                <div class="p-r-50 p-t-5 p-lr-0-lg">
                    <h4 class="mtext-105 cl2 js-name-detail p-b-16">
                        @tenSanpham
                    </h4>

                    <span class="mtext-106 cl2">
                        @String.Format("{0:#,##0 đ}", giaBan)

                    </span>

                    <p class="stext-102 cl3 p-t-23">
                        @Html.Raw(moTaSPTomTat)
                    </p>

                    <!--  -->
                    <div class="p-t-33">


                        <div class="flex-w flex-r-m p-b-10">
                            <div class="size-204 flex-w flex-m respon6-next">
                                <div class="wrap-num-product flex-w m-r-20 m-tb-10">
                                    <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                        <i class="fs-16 zmdi zmdi-minus"></i>
                                    </div>

                                    <input class="mtext-104 cl3 txt-center num-product" type="number" name="num-product" id="num-product" value="1">

                                    <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                        <i class="fs-16 zmdi zmdi-plus"></i>
                                    </div>
                                </div>
                                
                                    <input hidden name="maSP" id="maSP" value="@maSP" />
                                    <button type="button" onclick="add()" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail">
                                        Thêm vào giỏ hàng
                                    </button>
                            </div>
                        </div>
                    </div>

                    <!--  -->
                    <div class="flex-w flex-m p-l-100 p-t-40 respon7">
                        <div class="flex-m bor9 p-r-10 m-r-11">
                            <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 js-addwish-detail tooltip100" data-tooltip="Thêm vào danh sách yêu thích">
                                <i class="zmdi zmdi-favorite"></i>
                            </a>
                        </div>

                        <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Facebook">
                            <i class="fa fa-facebook"></i>
                        </a>

                        <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Twitter">
                            <i class="fa fa-twitter"></i>
                        </a>


                    </div>
                </div>
            </div>
        </div>

        <div class="bor10 m-t-50 p-t-43 p-b-40">
            <!-- Tab01 -->
            <div class="tab01">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item p-b-10">
                        <a class="nav-link active" data-toggle="tab" href="#description" role="tab">Mô tả sản phẩm</a>
                    </li>


                </ul>

                <!-- Tab panes -->
                <div class="tab-content p-t-43">
                    <!-- - -->
                    <div class="tab-pane fade show active" id="description" role="tabpanel">
                        <div class="how-pos2 p-lr-15-md">
                            @Html.Raw(@System.Net.WebUtility.HtmlDecode(moTaSP))
                            <p class="stext-102 cl6">

                            </p>

                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>

    <div class="bg6 flex-c-m flex-w size-302 m-t-73 p-tb-15">
        <span class="stext-107 cl6 p-lr-25">
            Mã hàng: @maSP
        </span>

        <span class="stext-107 cl6 p-lr-25">
            Loại hàng: @loaiSanPham
        </span>
    </div>
</section>

<script>
    function add() {
        let maSP = document.getElementById("maSP").value;
        let slThemMoi = document.getElementById("num-product").value;
        $.get("/ProductDetail/AddToCart", { maSP: maSP, slThemMoi: slThemMoi})
            .done(function (data) {
            });
    }

</script>
<!-- Modal -->

<!-- Related Products -->
<section class="sec-relate-product bg0 p-t-45 p-b-105">
    <div class="container">
        <div class="p-b-45">
            <h3 class="ltext-106 cl5 txt-center">
                Có Thể Bạn Sẽ Thích
            </h3>
        </div>

        <!-- Slide2 -->
        <div class="wrap-slick2">
            <div class="slick2">
                @{
                    foreach (SanPham spr in Common.getProductsRandom(20))
                    {
                        <div class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15">
                            <!-- Block2 -->
                            <div class="block2">
                                <div class="block2-pic hov-img0">
                                    <img src="@spr.hinhDD" alt="IMG-PRODUCT">

                                    <a href="@Url.Action("Index","ProductDetail",new {maSP = spr.maSP})" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
                                        Xem chi tiết
                                    </a>
                                </div>

                                <div class="block2-txt flex-w flex-t p-t-14">
                                    <div class="block2-txt-child1 flex-col-l ">
                                        <a href="@Url.Action("Index","ProductDetail",new {maSP = spr.maSP})" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                            @spr.tenSP
                                        </a>

                                        <span class="stext-105 cl3">
                                            @String.Format("{0:#,##0 đ}", spr.giaBan)
                                        </span>
                                    </div>

                                    <div class="block2-txt-child2 flex-r p-t-3"  onclick="themGioHang('@spr.maSP', '@spr.tenSP')">
                                        <a class="btn-addwish-b2 dis-block pos-relative">
                                            <img class="icon-heart1 dis-block trans-04" src="~/Image/icons/icon-heart-01.png" alt="ICON">
                                            <img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/Image/icons/icon-heart-02.png" alt="ICON">
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                }

            </div>
        </div>
    </div>
</section>
