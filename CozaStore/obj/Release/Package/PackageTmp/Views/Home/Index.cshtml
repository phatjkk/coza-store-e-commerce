<!-- Product -->
<section class="sec-product bg0 p-t-100 p-b-50">
    <div class="container">
        <div class="p-b-32">
            <h3 class="ltext-105 cl5 txt-center respon1">
                Sản phẩm mới
            </h3>
        </div>

        <!-- Tab01 -->
        <div class="tab01">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                @{
                    foreach (LoaiSP i in Common.getCategories())
                    {
                        <li class="nav-item p-b-10">
                            <a class="nav-link" data-toggle="tab" href='#@{@i.maLoai}' role="tab">@i.tenLoai</a>
                        </li>
                    }
                }
                </li>
            </ul>



            <!-- Tab panes -->
            <div class="tab-content p-t-50">
                @{

                    foreach (LoaiSP loai in Common.getCategories())
                    {
                        <div class="tab-pane fade show @(loai.maLoai == 1 ? "active" : "")" id="@loai.maLoai" role="tabpanel">
                            <!-- Slide2 -->
                            <div class="wrap-slick2">
                                <div class="slick2">
                                    @{
                                        foreach (SanPham i in Common.getProducts(loai.maLoai))
                                        {

                                            <div class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15">
                                                <!-- Block2 -->
                                                <div class="block2">
                                                    <div class="block2-pic hov-img0">
                                                        <img src="@i.hinhDD" alt="IMG-PRODUCT">

                                                        <a href="@Url.Action("Index","ProductDetail",new {maSP = i.maSP})" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
                                                            Xem chi tiết
                                                        </a>
                                                    </div>

                                                    <div class="block2-txt flex-w flex-t p-t-14">
                                                        <div class="block2-txt-child1 flex-col-l ">
                                                            <a href="@Url.Action("Index","ProductDetail",new {maSP = i.maSP})" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                                                @i.tenSP
                                                            </a>

                                                            <span class="stext-105 cl3">
                                                                @String.Format("{0:#,##0 đ}", i.giaBan)
                                                            </span>
                                                        </div>

                                                        <div class="block2-txt-child2 flex-r p-t-3">
                                                            <a href="#" class="btn-addwish-b2 dis-block pos-relative">
                                                                <img class="icon-heart1 dis-block trans-04" src="~/Image/icons/icon-heart-01.png" alt="ICON">
                                                                <img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/Image/icons/icon-heart-02.png" alt="ICON">
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        }
                                    }

                                </div>
                            </div>
                        </div>
                    }

                }

            </div>



        </div>
    </div>
</section>


<!-- Blog -->
<section class="sec-blog bg0 p-t-60 p-b-90">
    <div class="container">
        <div class="p-b-66">
            <h3 class="ltext-105 cl5 txt-center respon1">
                Bài viết
            </h3>
        </div>

        <div class="row">
            @{
                foreach (BaiViet bv in Common.getBlog())
                {
                    <div class="col-sm-6 col-md-4 p-b-40">
                        <div class="blog-item">
                            <div class="hov-img0">
                                <a href="@Url.Action("Index","BlogDetail",new {maBaiViet = bv.maBV})">
                                    <img src="@bv.hinhDD" alt="IMG-BLOG">
                                </a>
                            </div>

                            <div class="p-t-15">
                                <div class="stext-107 flex-w p-b-14">
                                    <span class="m-r-3">
                                        <span class="cl4">
                                            By
                                        </span>

                                        <span class="cl5">
                                            @bv.taiKhoan
                                        </span>
                                    </span>

                                    <span>
                                        <span class="cl4">
                                            on
                                        </span>

                                        <span class="cl5">
                                            @bv.ngayDang
                                        </span>
                                    </span>
                                </div>

                                <h4 class="p-b-12">
                                    <a href="@Url.Action("Index","BlogDetail",new {maBaiViet = bv.maBV})" class="mtext-101 cl2 hov-cl1 trans-04">
                                        @bv.tenBV
                                    </a>
                                </h4>

                                <p class="stext-108 cl6">
                                    @bv.ndTomTat
                                </p>
                            </div>
                        </div>
                    </div>
                    //if (j++ > 3) { break; }
                }
            }


        </div>
    </div>
</section>

